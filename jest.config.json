{
	"roots": ["<rootDir>"],
	"setupFiles": ["<rootDir>/setupTest/jest.setup.js"],
	"setupFilesAfterEnv": ["<rootDir>/setupTest/jest.setup.js"],
	"verbose": true,
	"moduleDirectories": ["node_modules", "lib"],
	"moduleNameMapper": {
		"^@/(.*)$": "<rootDir>/lib/$1"
	},
	"clearMocks": true,
	"moduleFileExtensions": ["js", "json", "node"],
	"testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
	"coverageReporters": ["html", "text"],
	"coverageDirectory": "coverage",
	"collectCoverageFrom": [
		"lib/Shift.js",
		"lib/provider/ShiftTrackingProvider.js",
		"!**/node_modules/**",
		"!**/vendor/**",
		"!**/env/**",
		"!<rootDir>/coverage",
		"!**/jestMocks/**"
	],
	"coveragePathIgnorePatterns": ["/node_modules/"],
	"coverageThreshold": {
		"global": {
			"branches": 100,
			"functions": 100,
			"lines": 100,
			"statements": 100
		}
	},
	"transform": {
		"^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
	},
	"transformIgnorePatterns": ["node_modules/(?!(react-native|@react-native|react-native-.*)/)"],
	"testEnvironment": "jsdom"
}
